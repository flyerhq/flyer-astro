---
import Marquee from "react-fast-marquee";
import Header from "./Header.astro";

type Props = { showIsCookingBanner: boolean };

const copy = "ðŸ”¥ The page is cooking ";
const { showIsCookingBanner } = Astro.props;
---

<div>
  {
    showIsCookingBanner ? (
      <Marquee
        client:only
        autoFill
        className="bg-primary text-[24px] leading-tight h-16 items-center font-medium select-none"
      >
        <span class="mr-2">{copy}</span>
        <div
          slot="fallback"
          class="flex bg-primary text-[24px] leading-tight h-16 font-medium select-none"
        />
      </Marquee>
    ) : null
  }
  <Header />
</div>
